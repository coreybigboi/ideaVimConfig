"" .ideavimrc - Corey Barr 2025

" ========================================================
" Base Settings
" ========================================================
set scrolloff=10
set relativenumber
set showmode
set showcmd

" Leader key timeout
set notimeout

" Remove sound when invalid input
set visualbell

" Case-insensitive searching UNLESS \C or one or more capital letters
set ignorecase
set smartcase
set incsearch
set hlsearch

" Map leader key to space-bar
let mapleader = " "

" Use system clipboard
set clipboard+=unnamedplus

" ========================================================
" Plugin Settings (IdeaVim loads plugins automatically)
" ========================================================
set which-key
let g:WhichKey_FontSize = 16
let g:WhichKey_CommandColor = "#41ead4"
let g:WhichKey_PrefixColor = "#e6b400"
let g:WhichKey_SortOrder = "by_key_prefix_first"

" Which-key descriptions (unique names)
let g:WhichKeyDesc_leader_root = "<leader> Leader key"
let g:WhichKeyDesc_leader_n = "<leader>n Open Project Tool Window"
let g:WhichKeyDesc_comment = "<leader>/ Comment line"
let g:WhichKeyDesc_fold_all = "<leader>zc Fold all regions"
let g:WhichKeyDesc_unfold_all = "<leader>zo Unfold all regions"
let g:WhichKeyDesc_window_split_vertically = "<leader>wv Split vertically"
let g:WhichKeyDesc_window_split_horizontally = "<leader>ws Split horizontally"
let g:WhichKeyDesc_window_split_unsplit = "<leader>wu Unsplit"
let g:WhichKeyDesc_window_split_move_editor = "<leader>wm Move editor to opposite tab group"
let g:WhichKeyDesc_display_zen = "<leader>dz Toggle Zen mode"
let g:WhichKeyDesc_display_df = "<leader>dd Toggle Distraction-Free mode"
let g:WhichKeyDesc_display_fullscreen = "<leader>df Toggle full screen"
let g:WhichKeyDesc_action_context_menu = "<leader>a Open action menu"
let g:WhichKeyDesc_file_nav_goto_file = "<leader>sf Search files"
let g:WhichKeyDesc_file_nav_goto_content = "<leader>sc Search content"
let g:WhichKeyDesc_file_nav_show_recent_files = "<leader>sr Recent files"
let g:WhichKeyDesc_file_nav_show_recent_locations = "<leader>sl Recent locations"
let g:WhichKeyDesc_refactoring_rename = "<leader>rn Rename element"
let g:WhichKeyDesc_git_commit = "<leader>vc Git commit"
let g:WhichKeyDesc_git_status = "<leader>vs Git status"
let g:WhichKeyDesc_git_branches = "<leader>vb Git branches"
let g:WhichKeyDesc_errors_next = "<leader>en Next error"
let g:WhichKeyDesc_errors_prev = "<leader>ep Previous error"
let g:WhichKeyDesc_terminal = "<leader>t Open terminal"
let g:WhichKeyDesc_close_tool_windows = "<leader><leader> Close all tool windows"
let g:WhichKeyDesc_ideavimrc = "<leader>; Edit .ideavimrc"

" ========================================================
" Key mappings
" ========================================================

" Center cursor on page up/down
nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

" Clear search highlighting when pressing ESC
nnoremap <ESC> :nohlsearch<CR><ESC>

" Pane navigation (use Ctrl for reliability)
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l
nnoremap <C-k> <C-w>k
nnoremap <C-j> <C-w>j

" Jump between methods
nnoremap [[ :action MethodUp<CR>
nnoremap ]] :action MethodDown<CR>

" Easy visual indentation
vnoremap < <gv
vnoremap > >gv

" Execute macro saved in 'q' register
nnoremap qj @q

" Popup navigation
inoremap <C-j> :action PopupMenu-selectNext<CR>
inoremap <C-k> :action PopupMenu-selectPrev<CR>

" ========================================================
" Leader commands
" ========================================================

" Comment lines
nnoremap <leader>/ :action CommentByLineComment<CR>

" Open Project Tool Window (instead of NERDTree)
nnoremap <leader>n :action ActivateProjectToolWindow<CR>

" Folding
nnoremap <leader>zc :action CollapseAllRegions<CR>
nnoremap <leader>zo :action ExpandAllRegions<CR>

" Window splits
nnoremap <leader>wv :action SplitVertically<CR>
nnoremap <leader>ws :action SplitHorizontally<CR>
nnoremap <leader>wu :action Unsplit<CR>
nnoremap <leader>wm :action MoveEditorToOppositeTabGroup<CR>

" Display options
nnoremap <leader>dd :action ToggleDistractionFreeMode<CR>
nnoremap <leader>dz :action ToggleZenMode<CR>
nnoremap <leader>df :action ToggleFullScreen<CR>

" Actions
nnoremap <leader>a :action ShowIntentionActions<CR>

" Search
nnoremap <leader>sf :action GotoFile<CR>
nnoremap <leader>sr :action RecentFiles<CR>
nnoremap <leader>sc :action FindInPath<CR>
nnoremap <leader>sl :action RecentLocations<CR>

" Refactoring
nnoremap <leader>rn :action RenameElement<CR>
nnoremap <leader>rm :action ExtractMethod<CR>
nnoremap <leader>rv :action IntroduceVariable<CR>
nnoremap <leader>rf :action IntroduceField<CR>
nnoremap <leader>rs :action ChangeSignature<CR>
nnoremap <leader>rr :action Refactorings.QuickListPopupAction<CR>

" Go to code
nnoremap <leader>gd :action GotoDeclaration<CR>
nnoremap <leader>gy :action GotoTypeDeclaration<CR>
nnoremap <leader>gi :action GotoImplementation<CR>
nnoremap <leader>gu :action ShowUsages<CR>
nnoremap <leader>gt :action GotoTest<CR>
nnoremap <leader>gf :action Back<CR>
nnoremap <leader>gb :action Forward<CR>

" Git windows
nnoremap <leader>vc :action CheckinProject<CR>
nnoremap <leader>vs :action ActivateVersionControlToolWindow<CR>
nnoremap <leader>vb :action Git.Branches<CR>

" Errors
nnoremap <leader>en :action ReSharperGotoNextErrorInSolution<CR>
nnoremap <leader>ep :action ReSharperGotoPrevErrorInSolution<CR>

" Terminal
nnoremap <leader>t :action ActivateTerminalToolWindow<CR>

" Hover Info
nnoremap K :action ShowHoverInfo<CR>

" Close all tool windows
nnoremap <leader><leader> :action HideAllWindows<CR>

" Go to .ideavimrc
nnoremap <leader>; :e ~/.ideavimrc<CR>

" ========================================================
" Harpoon-style bookmarks
" ========================================================
nnoremap <leader>a :action ToggleBookmarkWithMnemonic<CR>
nnoremap <leader>m :action ToggleBookmark<CR>
nnoremap <leader>h :action ShowBookmarks<CR>
nnoremap <leader>1 :action GotoBookmark1<CR>
nnoremap <leader>2 :action GotoBookmark2<CR>
nnoremap <leader>3 :action GotoBookmark3<CR>
nnoremap <leader>4 :action GotoBookmark4<CR>
nnoremap <leader>5 :action GotoBookmark5<CR>
nnoremap <leader>6 :action GotoBookmark6<CR>
nnoremap <leader>7 :action GotoBookmark7<CR>
nnoremap <leader>8 :action GotoBookmark8<CR>
nnoremap <leader>9 :action GotoBookmark9<CR>
nnoremap <leader>0 :action GotoBookmark10<CR>
