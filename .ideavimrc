"" .ideavimrc - Corey Barr 2025

" ========================================================
" Base Settings
" ========================================================
set scrolloff=10
set relativenumber
set showmode
set showcmd

" Remove sound when invalid input
set visualbell

" Case-insensitive searching UNLESS \C or one or more capital letters
set ignorecase
set smartcase
set incsearch
set hlsearch

" Map leader key to space-bar
let mapleader = " "

" Leader key timeout
set notimeout

" Use system clipboard
set clipboard+=unnamedplus

" ========================================================
" Plugin Settings (IdeaVim loads plugins automatically)
" ========================================================
set surround
set highlightedyank
set sneak

" Which-key: prefix descriptors (clean, unique, consistent)
" Core Which-key settings
set which-key
let g:WhichKey_FontSize = 16
let g:WhichKey_CommandColor = "#41ead4"
let g:WhichKey_PrefixColor = "#e6b400"
let g:WhichKey_SortOrder = "by_key_prefix_first"

" Root-level descriptors
let g:WhichKeyDesc_leader_root            = "<leader> Leader menu"
let g:WhichKeyDesc_leader_leader          = "<leader><leader> Hide tool windows"
let g:WhichKeyDesc_leader_edit_rc         = "<leader>; Edit .ideavimrc"
let g:WhichKeyDesc_leader_comment         = "<leader>/ Comment line"
let g:WhichKeyDesc_leader_project         = "<leader>n Project tool window"
let g:WhichKeyDesc_leader_terminal        = "<leader>t Terminal"

" Display / layout modes
let g:WhichKeyDesc_display_group          = "<leader>d Display modes"
let g:WhichKeyDesc_display_df             = "<leader>dd Distraction-free mode"
let g:WhichKeyDesc_display_zen            = "<leader>dz Zen mode"
let g:WhichKeyDesc_display_fullscreen     = "<leader>df Full screen"

" Window / splits prefix
let g:WhichKeyDesc_window_group           = "<leader>w Window / splits"
let g:WhichKeyDesc_window_split_vert      = "<leader>wv Split vertically"
let g:WhichKeyDesc_window_split_horiz     = "<leader>ws Split horizontally"
let g:WhichKeyDesc_window_unsplit         = "<leader>wu Unsplit window"
let g:WhichKeyDesc_window_move_group      = "<leader>wm Move editor to other tab group"

" Folding prefix
let g:WhichKeyDesc_fold_group             = "<leader>z Folding"
let g:WhichKeyDesc_fold_collapse_all      = "<leader>zc Collapse all regions"
let g:WhichKeyDesc_fold_expand_all        = "<leader>zo Expand all regions"

" Search/navigation prefix
let g:WhichKeyDesc_search_group           = "<leader>s Search / navigate"
let g:WhichKeyDesc_search_files           = "<leader>sf Search files"
let g:WhichKeyDesc_search_content         = "<leader>sc Search in path (content)"
let g:WhichKeyDesc_search_recent_files    = "<leader>sr Recent files"
let g:WhichKeyDesc_search_recent_locations= "<leader>sl Recent locations"

" Actions (intentions)
let g:WhichKeyDesc_action_group           = "<leader>a Actions / intentions"
let g:WhichKeyDesc_action_context_menu    = "<leader>a Show intention actions"

" Refactoring prefix
let g:WhichKeyDesc_refactor_group         = "<leader>r Refactor"
let g:WhichKeyDesc_refactor_rename        = "<leader>rn Rename element"
let g:WhichKeyDesc_refactor_extract_method= "<leader>rm Extract method"
let g:WhichKeyDesc_refactor_intro_var     = "<leader>rv Introduce variable"
let g:WhichKeyDesc_refactor_intro_field   = "<leader>rf Introduce field"
let g:WhichKeyDesc_refactor_signature     = "<leader>rs Change signature"
let g:WhichKeyDesc_refactor_all           = "<leader>rr Refactorings quick list"

" Go-to prefix
let g:WhichKeyDesc_goto_group             = "<leader>g Go toâ€¦"
let g:WhichKeyDesc_goto_decl              = "<leader>gd Go to declaration"
let g:WhichKeyDesc_goto_type              = "<leader>gy Go to type declaration"
let g:WhichKeyDesc_goto_impl              = "<leader>gi Go to implementation"
let g:WhichKeyDesc_goto_usages            = "<leader>gu Show usages"
let g:WhichKeyDesc_goto_test              = "<leader>gt Go to test"
let g:WhichKeyDesc_goto_back              = "<leader>gf Back"
